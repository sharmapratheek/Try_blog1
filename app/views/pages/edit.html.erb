<%= form_for(@page) do |f|%>
	<div class="field">
	<p><%= f.label :title %></p>
	<p><%= f.text_area :title%></p>
	</div>

	<div class="field">
	<p><%= f.label :body %></p>
	<p><%= f.text_field :body %></p>
	</div>
		
	<div class="field">
	<p><%= f.label :slug %></p>
	<p><%= f.text_field :slug%></p>	
	</div>
	<div>
		<%= f.submit %>
	</div>
<% end %>

